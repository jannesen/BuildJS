{
    "compilerOptions": {
        "target":               "es2017",
        "module":               "none",
        "noErrorTruncation":    true,
        "noImplicitAny":        true,
        "noImplicitThis":       true,
        "alwaysStrict":         true,
        "strict":               true,
        "preserveConstEnums":   false,
        "removeComments":       true,
        "moduleResolution":     "node",
        "sourceMap":            true,
        "inlineSources":        true,
        "outDir":               "../lib",
        "baseUrl":              "."
    }
}